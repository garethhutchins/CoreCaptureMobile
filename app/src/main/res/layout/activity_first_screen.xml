<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/firstScreenRl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="1dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FirstScreen">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/leapsnap" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatSettings"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="7dp"
        android:background="@android:color/holo_green_dark"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_menu_preferences" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingGallery"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_above="@+id/floatSettings"
        android:layout_alignStart="@+id/floatSettings"
        android:layout_marginBottom="19dp"
        android:background="@android:color/holo_green_dark"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_menu_gallery" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingCamera"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_above="@+id/floatingGallery"
        android:layout_alignStart="@+id/floatingGallery"
        android:layout_marginBottom="13dp"
        android:background="@android:color/holo_green_dark"
        android:clickable="true"

        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="Gareth's Snap Mobile"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="36sp"
        android:typeface="normal" />

</RelativeLayout>
